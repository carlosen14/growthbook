{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@back-end/*": ["../back-end/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
